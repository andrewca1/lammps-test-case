# mesoscopic heat conduction
# heat flow from hot right region to cold left region
# compare the temperature profile at the end opf the simulation,
# contained in file dump.last, to analytic solution.
#
#
dimension       2
units		si
atom_style	meso/multiphase
boundary        f f p 

# Adding a new property - need to be added before simulation box
fix   	        prop all property/atom d_cA d_dcA d_DA d_cAeq d_RA d_dmA d_mAthres ghost yes

variable        dt equal 0.01
variable 	T equal 40.00
variable 	nrun equal ${T}/${dt}

# Some dimensional parameters
variable	L equal 1.0
variable	neq equal 32
variable	xmid equal 0.5*${L}
variable	ymid equal 0.5*${L}

variable        h equal ${L}/${neq}
variable	d equal 0.5*${h}
variable        dx equal ${h}/3.0

variable 	sph_rho equal 1.0
variable        sph_mass equal ${sph_rho}*${dx}^2
variable	mass_thres equal 2.0*${sph_mass}

lattice		sq ${dx} origin 0.5 0.5 0
region		box block 0 ${L} 0 ${L} 0 ${dx} units box
create_box	2 box
create_atoms 	1 box
# create_atoms 	1 random 10000 12345 NULL

region          left  block EDGE 0.9 EDGE EDGE EDGE EDGE units box
region          right block 0.9 EDGE EDGE EDGE EDGE EDGE units box

# Setting the properties for the region
set		region left type 1 # liquid
set		region right type 2 # solid

set	        region left meso/rho ${sph_rho}
set		region right meso/rho ${sph_rho}
set	        region left mass ${sph_mass}
set		region right mass ${sph_mass}

# set             region left d_cA 2.0
# set             region right d_cA 1.0
set		atom * d_cA 1.0
set		atom * d_cAeq 0.0 # equilibrium concentration
set		atom * d_dcA 0.0
set		atom * d_dmA 0.0
set		atom * d_DA 1.0e-3 # diffusion coefficient
set		atom * d_RA 9.5e-3 # Interacting between solid and liquid
set		atom * d_mAthres ${mass_thres} # threshold mass to convert to solid

pair_style      sph/concAprecipitation/multiphase
#               i j cutoff
# There seems to be problem with large value of either constants
# TODO: Figure it out
pair_coeff      * * 	      ${h} ${d}

timestep        ${dt}
neighbor	0 bin
fix             integrate_fix all meso/stationary
fix 		precipitation_fix all meso/precipitationA

dump		dump_fix all custom 10 dump.heat id type x y z d_cA mass
dump_modify     dump_fix first yes
run             ${nrun}
undump          dump_fix